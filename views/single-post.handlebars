
{{> post-info post}}


<!-- only display if logged in -->
{{#if loggedIn}}
<form class="comment-form">
  <fieldset class="uk-fieldset">
    <legend class="uk-legend">Add Comment</legend>
  <div class="uk-margin">
    <textarea class="uk-textarea-xlarge" rows="5" placeholder="Drag box to enlarge" name="comment-body" maxlength="255"></textarea>
  </div>

  <div class="uk-margin">
    
    <button class="uk-button uk-button-warning" type="submit" id="submit" value="submit">Submit Comment</button>
    <p><span class="uk-text-danger">*</span>Max. 255 characters </p>
  </div>
  </fieldset>
</form>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}